<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 
    Questo file va inserito in android/app/src/main/res/values/styles.xml
    dopo aver generato il progetto con Capacitor
    -->

    <!-- Tema principale dell'applicazione -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personalizza i colori dell'app in stile PancakeSwap -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Tema per lo Splash Screen -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Stile per il tema Splash Screen -->
    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>