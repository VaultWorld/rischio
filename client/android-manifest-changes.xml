<?xml version="1.0" encoding="utf-8"?>
<!-- 
Aggiungi queste modifiche al file AndroidManifest.xml che verrÃ  generato 
in android/app/src/main/AndroidManifest.xml da Capacitor
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Permessi Internet necessari per l'app -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Configurazione dell'applicazione -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <!-- Colori personalizzati per PancakeSwap style -->
        <meta-data
            android:name="com.capacitor.theme.primary"
            android:resource="@color/colorPrimary" />
        <meta-data
            android:name="com.capacitor.theme.background"
            android:resource="@color/colorPrimaryDark" />
            
        <!-- Tema Splash Screen -->
        <meta-data
            android:name="com.capacitor.splash.background"
            android:resource="@color/colorPrimaryDark" />
        <meta-data
            android:name="com.capacitor.splash.color"
            android:resource="@color/colorPrimary" />
    </application>
</manifest>